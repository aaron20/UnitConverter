<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
    android:id="@+id/LinearLayout00"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#92cd00"
    android:paddingTop="10dp"
    android:orientation="horizontal" >
    
    </LinearLayout>
    
    
<LinearLayout
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#92cd00"
    android:paddingTop="15dp"
    android:orientation="horizontal" >

    <Spinner
        android:id="@+id/SpinnerUnit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.02"
        android:background="@drawable/edittextstyle"
        android:paddingLeft="10dp"
        android:paddingTop="15dp" 
        android:paddingBottom="15dp" >

    </Spinner>
</LinearLayout>



<LinearLayout 
    android:id="@+id/LinearLayout03" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:background="#92cd00"
     android:layout_gravity="center_horizontal">
    
    <LinearLayout
        android:background="#92cd00"
    android:focusable="true" android:focusableInTouchMode="true"
    android:layout_width="0px" android:layout_height="0px"/>
<EditText
    android:id="@+id/EditTextValue"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:hint="@string/EditTextValue1"
    android:inputType="number|numberDecimal"
    android:background="@drawable/edittextstyle"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
     android:textColor="#000000"
     android:gravity="center" 
     
     >

</EditText>
</LinearLayout>


<LinearLayout 
    android:id="@+id/LinearLayoutFrom" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:background="#92cd00"
    android:layout_gravity="center_horizontal">

    <Spinner
        android:id="@+id/SpinnerFrom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.02"
        android:background="@drawable/edittextstyle"
        android:paddingLeft="10dp"
        android:paddingTop="15dp" 
        android:paddingBottom="15dp" />

</LinearLayout>

<LinearLayout 
    android:id="@+id/LinearLayoutTo" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:background="#92cd00"
    android:layout_gravity="center_horizontal">
    
<Spinner
        android:id="@+id/SpinnerTo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.02"
        android:background="@drawable/edittextstyle"
        android:paddingLeft="10dp"
        android:paddingTop="15dp" 
        android:paddingBottom="15dp"/>
    
</LinearLayout>

<LinearLayout
    android:id="@+id/LinearLayoutw"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#92cd00"
    android:orientation="horizontal"
    android:paddingTop="10dp" >

    <Button
        android:id="@+id/Convert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/Convert"
        android:gravity="center" />

    
</LinearLayout>
<LinearLayout
    android:id="@+id/LinearLayoutq"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#92cd00"
    android:orientation="horizontal"
    android:paddingTop="10dp" >

    <EditText
        android:id="@+id/TextViewComputeResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextstyle"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="@string/TextViewComputeResult"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="@string/TextViewComputeResult" >

        <requestFocus />
    </EditText>
    
</LinearLayout>
</LinearLayout>
